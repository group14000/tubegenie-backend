# Port Configuration
PORT=5000

# Node Environment (development, production, staging)
NODE_ENV=development

# Clerk Authentication
# Get these from https://clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# MongoDB Database
# Local: mongodb://localhost:27017/TubeGenie
# Atlas: mongodb+srv://user:password@cluster.mongodb.net/TubeGenie
MONGODB_URI=mongodb://localhost:27017/TubeGenie

# OpenRouter AI API
# Get your API key from https://openrouter.ai
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Site Information (for OpenRouter rankings)
SITE_URL=http://localhost:5000
SITE_NAME=TubeGenie

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API URL (for Swagger docs and external references)
# Production: https://api.yourdomain.com
# Development: http://localhost:5000
API_URL=http://localhost:5000
